# Use an official Ubuntu as a parent image
FROM ubuntu:20.04

# Set non-interactive mode to avoid prompts during build
ARG DEBIAN_FRONTEND=noninteractive

# Install dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    sudo \
    unzip \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Clone the fhs-install-v2ray repository
RUN git clone https://github.com/v2fly/fhs-install-v2ray.git /fhs-install-v2ray

# Set working directory to the fhs-install-v2ray folder
WORKDIR /fhs-install-v2ray

# Run the install-release.sh script to install V2Ray
RUN sudo ./install-release.sh

# Copy your custom config.json to the container
COPY config.json /usr/local/etc/v2ray/config.json

# Expose port 80 for WebSocket connections
EXPOSE 80

# Run V2Ray with the appropriate configuration
CMD ["/usr/local/bin/v2ray", "-config", "/usr/local/etc/v2ray/config.json"]
