# Use the latest Rust image
FROM rust:latest

# Set the working directory
WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y \
    libssl-dev \
    pkg-config \
    git \
    && rm -rf /var/lib/apt/lists/*

# Clone the wstunnel repo and build it
RUN git clone https://github.com/erebe/wstunnel.git .
RUN cargo build --release

# Expose port 80 for WebSocket traffic
EXPOSE 80

# Run the wstunnel server on port 80
CMD ["./target/release/wstunnel", "--server", "ws://0.0.0.0:80"]
