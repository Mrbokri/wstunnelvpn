# Use the official Rust image as a base
FROM rust:latest

# Set the working directory
WORKDIR /app

# Install required packages
RUN apt-get update && apt-get install -y \
    libssl-dev \
    pkg-config \
    git \
    && rm -rf /var/lib/apt/lists/*

# Clone the wstunnel repository
RUN git clone https://github.com/erebe/wstunnel.git .

# Build the wstunnel binary
RUN cargo build --release

# Expose port 80 for WebSocket connection
EXPOSE 80

# Command to run the wstunnel server
CMD ["./target/release/wstunnel", "--server", "ws://0.0.0.0:80"]
